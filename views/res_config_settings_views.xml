<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.odoo.allegro</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='msg_module_product_images']" position="after">
                <div class="content-group" id="msg_module_product_images">
                    <div class="content-group mt16 row">
                        <label string="Allegro Application ID" for="allegro_client_id"
                               class="col-4 col-lg-4 o_light_label"/>
                        <field name="allegro_client_id" nolabel="1"/>
                        <label string="Allegro Application Secret" for="allegro_client_secret"
                               class="col-4 col-lg-4 o_light_label"/>
                        <field name="allegro_client_secret" nolabel="1"/>
                        <label string="Allegro Refresh Token Override" for="allegro_refresh_token_override"
                               class="col-4 col-lg-4 o_light_label"/>
                        <field name="allegro_refresh_token_override" nolabel="1"/>
                        <label string="Allegro Tokens" for="allegro_token"
                               class="col-4 col-lg-4 o_light_label"/>
                        <field name="allegro_token" nolabel="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
